 * Keeps score for games played
 */
import java.io.*;
public class Score {
    void getScore(){
        Main main = new Main();
        String playerName = main.playersone;
        String fileName = playerName + ".txt";
        try{
            BufferedWriter bw = new BufferedWriter(new FileWriter(fileName));
            bw.write("this is where score goes");
            bw.close();
        }catch(Exception ignored){
        }
        try{
            BufferedReader br = new BufferedReader(new FileReader(fileName));
            String retVal;
            System.out.println("you have a previous history of:");
            while((retVal = br.readLine()) != null){
                System.out.println(retVal);
            }
        }catch(Exception ignored){
        }
    }
}
